{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "all": true
      },
      "correctness": {
        "all": true
      },
      "style": {
        "all": true
      },
      "complexity": {
        "all": true
      },
      "performance": {
        "all": true
      },
      "security": {
        "all": true
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "files": {
    "ignore": ["node_modules", "build"]
  }
}
